<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/custom_dialog_box"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/toast_shape"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_dia"
        style="@style/homeMenuStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dialog_box_text_margin"
        android:layout_marginLeft="@dimen/dialog_box_text_margin"
        android:layout_marginRight="@dimen/dialog_box_text_margin"
        android:layout_gravity="center"
        android:text="@string/dialog_box_are_you_sure" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center">

        <Button
            style="@style/dialogBoxButtonStyle"
            android:id="@+id/yes_bttn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/dialog_box_text_margin"
            android:layout_marginRight="@dimen/dialog_box_text_margin"
            android:clickable="true"
            android:text="@string/dialog_box_yes" />

        <Button
            android:id="@+id/no_bttn"
            style="@style/dialogBoxButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:layout_marginRight="@dimen/dialog_box_text_margin"
            android:text="@string/dialog_box_no" />
    </LinearLayout>

</LinearLayout>